// 0! = 1
// 1! = 1
// 2! = 2
FUNCTION factorial( INT32 v ) : INT32
{
    INT32 r = 1;
    IF ( v > 1 )
    {
        r = v * CALL factorial( v - 1 );
    };

    RETURN r;
};

INT32 v;
INT32 f;
FOR ( v : (0,7) )
{
    // This is just to test that CALL can be used in a unary expression:
    f = - CALL factorial( v );
    PRINT "- Factorial of ", v, " is ", f;

    // undo the negation to print the actual factorial:
    f = - f;
    PRINT "Factorial of ", v, " is ", f;
};
